<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal"
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/private_smsrecover_listview_item_layout"
	android:padding="10.0dip" android:focusable="true" android:clickable="true" android:background="@drawable/selector_list_item_with_bg"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	
	<TextView android:id="@+id/private_smsrecover_listview_item_smsid_txt" 
	android:layout_width="0dip" android:layout_height="0dip"
	/>
	<CheckBox android:id="@+id/private_smsrecover_listview_item_choice_cbox"
		android:layout_width="54dip"
		android:layout_height="wrap_content" 
		android:button="@drawable/selector_checkbox"
		
		android:layout_alignParentRight="true" />
	<ImageView android:duplicateParentState="true"
		android:id="@+id/private_smsrecover_listview_item_readflag_img"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentRight="true" />
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:id="@+id/private_smsrecover_listview_item_phone_txt"
			android:duplicateParentState="true" android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			 />
		<TextView android:id="@+id/private_smsrecover_listview_item_msg_txt"
			android:layout_width="fill_parent" android:layout_height="wrap_content" 
			android:textColor="#000000"
			/>
	</LinearLayout>
</LinearLayout>