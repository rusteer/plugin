<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/components_list_title_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/system_dialog_bg_nt"
    android:orientation="horizontal" >

    <ProgressBar
        android:id="@+id/system_alert_ProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="45dip"
        android:layout_height="45dip"
        mce_style="?android:attr/progressBarStyleLarge" />

    <TextView
        android:id="@+id/system_alert_ProgressBar_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:text="@string/system.lodingDialog.Str"
        android:textColor="@color/black"
        android:textSize="19dip" />

</LinearLayout>