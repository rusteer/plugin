<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20.0dp"  >
	 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sms_receive_title"
        android:orientation="horizontal"
        android:paddingBottom="3.0dp"
        android:paddingTop="5.0dp" 
        android:gravity="top|left">
        <ImageView
			android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:scaleType="fitXY"
		    android:layout_marginLeft="10dp"
			android:id="@+id/sms_notify_img" 
			android:layout_gravity="center_vertical|left"/>
        <LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center_vertical|left"
			android:layout_marginRight="10dp"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_vertical|left">
			<TextView android:text="昵称" 
			    android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:id="@+id/sms_notify_name_txt" 
				android:textSize="20dp"
				android:textColor="@color/white"/>
			<TextView android:text="号码" 
			    android:paddingTop="2.0dp" 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent"
				android:id="@+id/sms_notify_Phone_txt" 
				android:textSize="16dp"
				android:textColor="#caecff"/>
		</LinearLayout>
		<ImageView
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/sms_notify_close"
		    android:scaleType="fitXY"
			android:id="@+id/sms_notify_close_img" 
			android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/block_mode_set_body_bg"
        android:orientation="vertical"
        android:layout_weight="1">
       	 <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:paddingTop="5.0dp" 
	        android:gravity="center_vertical|left"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp">
	        <ImageView 
				android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:scaleType="fitXY"
			    android:background="@drawable/sms_notify_inbox"/>
	        <TextView android:text="时间" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:id="@+id/sms_notify_time_txt" 
				android:textSize="16dp"
				android:layout_marginLeft="5dp"
				android:textColor="#F6AD7D"
				android:layout_weight="1"/>
	        <ImageView
				android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/sms_notify_left"
			    android:scaleType="fitXY"
				android:id="@+id/sms_notify_left"/>
	          <TextView android:text="统计" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:id="@+id/sms_notify_count_txt" 
				android:textSize="16dp"
				android:layout_marginLeft="3dp"
				android:layout_marginRight="3dp"
				android:textColor="#F6AD7D"/>
	        <ImageView
				android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/sms_notify_right"
			    android:scaleType="fitXY"
				android:id="@+id/sms_notify_right" />
        </LinearLayout>
		<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:scrollbars="vertical"
			android:fillViewport="true"
			android:layout_weight="1"
			android:minHeight="100dp">
			<main.ui.GuesterLinearLayout
			    android:id="@+id/sms_notify_body_layout"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" 
	            android:paddingBottom="5dp"
        		android:paddingTop="5dp" 
        		android:paddingLeft="15dp"
        		android:paddingRight="15dp"
        		android:gravity="center_vertical|left">
                <TextView
	                android:id="@+id/sms_notify_body_txt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="内容"
	                android:textColor="@color/txt_label_black"
	                android:textSize="20dp" />
			</main.ui.GuesterLinearLayout>
		</ScrollView>
		<include layout="@layout/listview_divider" />
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:orientation="horizontal" 
			android:paddingRight="10.0dp">
			 
			<LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:orientation="horizontal" 
	            android:paddingLeft="10.0dp" >
                <TextView
	                android:id="@+id/notify_delete_btn"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/notify_read_btn"
	                android:gravity="center"
	                android:text="删除"
	                android:textColor="#317fac"
	                android:textSize="16dp" />
			</LinearLayout>
			<LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:orientation="horizontal" 
	            android:paddingLeft="10.0dp" >
                 <TextView 
	                android:id="@+id/notify_read_btn"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/notify_read_btn"
	                android:gravity="center"
	                android:textColor="#317fac"
	                android:text="已读"
	                android:textSize="16dp" />
			</LinearLayout>
			<LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:orientation="horizontal" 
	            android:paddingLeft="10.0dp" >
                 <TextView 
	                android:id="@+id/notify_reply_btn"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/notify_read_btn"
	                android:gravity="center"
	                android:textColor="#317fac"
	                android:text="回复"
	                android:textSize="16dp" />
			</LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>