<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout 
        android:id="@+id/call_number_bg"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center"
	    android:background="@drawable/phone_book_search_bg"
	    >
	   	<EditText
			android:id="@+id/call_number"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/phone_book_search"
			android:textSize="30dp"
			android:textColor="#000000"
			android:hint="@string/phone_input_phone_tips_hint"
			android:text=""
			android:inputType="none"
			android:singleLine="true"
			android:layout_margin="10dp"
			android:gravity="center|left"/>
	   	
	</LinearLayout>
	
    
   	 <LinearLayout 
   	    android:id="@+id/displaytips"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_below="@id/call_number_bg"
	    android:gravity="center"
	     android:padding="4dp">
	    <LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="2dp"
		    android:gravity="center"
		    android:layout_marginLeft="10dp">
		    <ImageView
		        android:id="@+id/personicon"
		        android:layout_width="46dp"
	        	android:layout_height="46dp"
	        	android:scaleType="fitXY"
		        android:src="@drawable/phone_person_icon"/>
		</LinearLayout>
	 	 <LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:padding="2dp"
		    android:layout_marginLeft="10dp"
		    android:gravity="center|left">
		    <TextView
               android:id="@+id/phone_name"
               android:layout_width="wrap_content"
               android:layout_height="fill_parent"
               android:singleLine="true"
               android:text=""
               android:textColor="#487EA4"
               android:textSize="16dp"
               android:gravity="center|left" />
			<TextView
               android:id="@+id/phone_number"
               android:layout_width="wrap_content"
               android:layout_height="fill_parent"
               android:singleLine="true"
               android:text=""
               android:textColor="#487EA4"
               android:textSize="16dp"
               android:layout_weight="1"
               android:gravity="center|left" />
	    </LinearLayout>
	    <LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:padding="2dp"
		    android:gravity="center|right">
			<ImageView
			    android:id="@+id/phone_more"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:src="@drawable/phone_display_list_button_src"
		    	android:scaleType="centerInside"
		    	android:layout_marginLeft="2dp"
		    	android:layout_marginRight="5dp"
	    		android:background="@drawable/phone_display_button_rect"
	    	/>
		</LinearLayout>
	</LinearLayout>

   	<ImageView
        android:id="@+id/displaytips_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/displaytips"
        android:background="@drawable/phone_list_base_line"/>
   	  
	<LinearLayout 
	    android:id="@+id/call_buttom"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/phone_call_buttom_bg"
	    android:orientation="horizontal"
	    android:gravity="center">
	    <ImageView
		    android:id="@+id/number_voice"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:src ="@drawable/phone_ic_dial_action_delete"
	    	android:background="@drawable/phone_call_phone_cancel"
	    	android:scaleType="centerInside"
	    	android:layout_weight="1"
	    	android:layout_marginLeft="4dp"
	    	android:layout_marginRight="5dp"
	    />
		<ImageView
		    android:id="@+id/call"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:src ="@drawable/phone_call_phone_button_src"
	    	android:background="@drawable/phone_call_phone_button"
	    	android:scaleType="centerInside"
	    	android:layout_weight="1"
	    	android:layout_marginLeft="5dp"
	    />
		<ImageView
		    android:id="@+id/number_cancel"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:src ="@drawable/phone_ic_dial_action_delete"
	    	android:background="@drawable/phone_call_phone_cancel"
	    	android:scaleType="centerInside"
	    	android:layout_weight="1"
	    	android:layout_marginLeft="4dp"
	    	android:layout_marginRight="5dp"
	    />
	</LinearLayout>
	
	<ImageView
        android:id="@+id/call_buttom_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:layout_above="@id/call_buttom"
        android:background="@drawable/phone_list_base_line"/>
	     	
	<LinearLayout
    	android:id="@+id/list_content3"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/displaytips_line"
	    android:layout_above="@id/call_buttom_line"
	    android:layout_toLeftOf="@id/phone_more"
	    android:layout_marginBottom="1dp"
		android:visibility="gone">
		<ListView
			android:id="@+id/search_record_list"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:cacheColorHint="#00000000"
			android:divider="@drawable/phone_list_base_line"
			android:dividerHeight="1dp"
			android:textSize="18sp" />
	</LinearLayout>
	
	
	
  	 <LinearLayout 
  	    android:id="@+id/jianpan"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" 
	    android:layout_below="@id/displaytips_line"
	    android:layout_above="@id/call_buttom_line"
	    android:background="@drawable/phone_jianpan_bg"
		android:gravity="center">
	   <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="2dp"
		    android:orientation="horizontal" 
		    android:layout_weight="1"
		    android:gravity="center"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp">
			<Button
			    android:id="@+id/call_1"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
		    	android:scaleType="centerInside"
		    	android:text="1"
		    	android:textSize="26dp"
		    	android:layout_weight="1"
		    	android:background="@drawable/phone_jianpan_button"/>
			<Button
			    android:id="@+id/call_2"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
		    	android:scaleType="centerInside"
		    	android:text="2"
		    	android:textSize="26dp"
		    	android:layout_weight="1"
		    	android:layout_marginLeft="2dp"
		    	android:background="@drawable/phone_jianpan_button"/>
			<Button
			    android:id="@+id/call_3"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
		    	android:scaleType="centerInside"
		    	android:text="3"
		    	android:textSize="26dp"
		    	android:layout_weight="1"
		    	android:layout_marginLeft="2dp"
		    	android:background="@drawable/phone_jianpan_button"/>
		</LinearLayout>
		 <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="2dp"
		    android:orientation="horizontal" 
		    android:layout_weight="1"
		    android:gravity="center"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp">
			<Button
			    android:id="@+id/call_4"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
		    	android:scaleType="centerInside"
		    	android:text="4"
		    	android:textSize="26dp"
		    	android:layout_weight="1"
		    	android:background="@drawable/phone_jianpan_button"/>
			<Button
			    android:id="@+id/call_5"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
		    	android:scaleType="centerInside"
		    	android:text="5"
		    	android:textSize="26dp"
		    	android:layout_weight="1"
		    	android:layout_marginLeft="2dp"
		    	android:background="@drawable/phone_jianpan_button"/>
			<Button
			    android:id="@+id/call_6"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
		    	android:scaleType="centerInside"
		    	android:text="6"
		    	android:textSize="26dp"
		    	android:layout_weight="1"
		    	android:layout_marginLeft="2dp"
		    	android:background="@drawable/phone_jianpan_button"/>
		</LinearLayout>
		 <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="2dp"
		    android:orientation="horizontal" 
		    android:layout_weight="1"
		    android:gravity="center"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp">
			<Button
			    android:id="@+id/call_7"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
		    	android:scaleType="centerInside"
		    	android:text="7"
		    	android:textSize="26dp"
		    	android:layout_weight="1"
		    	android:background="@drawable/phone_jianpan_button"/>
			<Button
			    android:id="@+id/call_8"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
		    	android:scaleType="centerInside"
		    	android:text="8"
		    	android:textSize="26dp"
		    	android:layout_weight="1"
		    	android:layout_marginLeft="2dp"
		    	android:background="@drawable/phone_jianpan_button"/>
			<Button
			    android:id="@+id/call_9"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
		    	android:scaleType="centerInside"
		    	android:text="9"
		    	android:textSize="26dp"
		    	android:layout_weight="1"
		    	android:layout_marginLeft="2dp"
		    	android:background="@drawable/phone_jianpan_button"/>
		</LinearLayout>
		 <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="2dp"
		    android:orientation="horizontal" 
		    android:layout_weight="1"
		    android:gravity="center"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp">
			<Button
			    android:id="@+id/call_star"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
		    	android:scaleType="centerInside"
		    	android:text="*"
		    	android:textSize="26dp"
		    	android:layout_weight="1"
		    	android:background="@drawable/phone_jianpan_button"/>
			<Button
			    android:id="@+id/call_0"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
		    	android:scaleType="centerInside"
		    	android:text="0"
		    	android:textSize="26dp"
		    	android:layout_weight="1"
		    	android:layout_marginLeft="2dp"
		    	android:background="@drawable/phone_jianpan_button"/>
			<Button
			    android:id="@+id/call_jin"
		    	android:layout_width="wrap_content"
		    	android:layout_height="fill_parent"
		    	android:scaleType="centerInside"
		    	android:text="#"
		    	android:textSize="26dp"
		    	android:layout_weight="1"
		    	android:layout_marginLeft="2dp"
		    	android:background="@drawable/phone_jianpan_button"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>