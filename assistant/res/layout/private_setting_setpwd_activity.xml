<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20.0dp" 
	android:paddingRight="20.0dp" >
    <TextView android:text="@string/private_setting_pwdTitle" 
		    android:paddingLeft="10.0dp" 
			android:paddingRight="10.0dp"
			android:paddingTop="5.0dp"
			android:paddingBottom="5.0dp"
			android:textAppearance="?android:textAppearanceLarge"
			android:layout_width="fill_parent" android:layout_height="wrap_content" 
			android:textColor="@color/white"
			android:gravity="left" android:background="@drawable/block_mode_set_title_bg" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/block_mode_set_body_bg"
        android:orientation="vertical"
        android:paddingBottom="5.0dp"
        android:paddingTop="5.0dp" >
        <LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:paddingLeft="10.0dp" 
			android:paddingRight="10.0dp">
			<TextView android:layout_height="wrap_content" android:textColor="@color/txt_label_blue"
				android:layout_width="fill_parent" android:text="旧密码" 
				android:textSize="16dp" android:layout_weight="2"/>
			<EditText
				android:id="@+id/private_setting_setpwd_oldpwd_txt"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="16dp"
				android:textColor="@color/txt_label_black"
				android:text=""
				android:background="@drawable/password_input_btn"
				android:gravity="left|center"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="3dp"
				android:layout_marginBottom="3dp"
				android:layout_weight="1"
				android:paddingLeft="10dp"/>
		</LinearLayout>
		 <LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:paddingLeft="10.0dp" 
			android:paddingRight="10.0dp">
			<TextView android:layout_height="wrap_content" android:textColor="@color/txt_label_blue"
				android:layout_width="fill_parent" android:text="输入新密码" 
				android:layout_weight="2" android:textSize="16dp"/>
			<EditText
				android:id="@+id/private_setting_setpwd_pwd_txt"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="16dp"
				android:textColor="@color/txt_label_black"
				android:text=""
				android:background="@drawable/password_input_btn"
				android:gravity="left|center"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="3dp"
				android:layout_marginBottom="3dp"
				android:layout_weight="1"
				android:paddingLeft="10dp"/>
		</LinearLayout>
		 <LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:paddingBottom="5dp"
			android:paddingLeft="10.0dp" 
			android:paddingRight="10.0dp">
			<TextView android:layout_height="wrap_content" android:textColor="@color/txt_label_blue"
				android:layout_width="fill_parent" android:text="确定新密码" 
				android:layout_weight="2" android:textSize="16dp"/>
			<EditText
				android:id="@+id/private_setting_setpwd_pwd1_txt"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="16dp"
				android:textColor="@color/txt_label_black"
				android:text=""
				android:background="@drawable/password_input_btn"
				android:gravity="left|center"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="3dp"
				android:layout_marginBottom="3dp"
				android:layout_weight="1"
				android:paddingLeft="10dp"/>
		</LinearLayout>
		<include layout="@layout/alertdialog_divider" />
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" 
            android:paddingLeft="10.0dp" 
			android:paddingRight="10.0dp">
			 
			<LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:orientation="horizontal" >
                <TextView
	                android:id="@+id/private_setting_setpwd_OK_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/alertdialog_btn"
	                android:gravity="center"
	                android:text="@string/batteryManager.submit.str"
	                android:textColor="@color/black"
	                android:textSize="16dp" />
			</LinearLayout>
			<LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:orientation="horizontal" >
                 <TextView 
	                android:id="@+id/private_setting_setpwd_Cancel_btn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10sp"
	                android:background="@drawable/alertdialog_btn"
	                android:gravity="center"
	                android:textColor="@color/black"
	                android:text="@string/batteryManager.cancel.str"
	                android:textSize="16dp" />
			</LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>