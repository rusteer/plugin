<?xml version="1.0" encoding="utf-8"?>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/search_listview_layout" 
		android:paddingLeft="3.0dip"
		android:paddingRight="3.0dip" 
		android:paddingTop="6.0dip" 
		android:paddingBottom="6.0dip"  
		android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:gravity="center_vertical"
		>
		 <TextView  android:id="@+id/search_listview_id" android:layout_width="0dip" android:layout_height="0dip" />
		 <ImageView android:duplicateParentState="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			 android:id="@+id/search_listview_img"    android:layout_alignParentLeft="true" 
			 android:layout_marginLeft="5dip"/>
		<TextView android:textSize="16dp"
			android:id="@+id/search_listview_txt" android:textColor="@color/black"
			android:duplicateParentState="true" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_toRightOf="@id/search_listview_img"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dip"/>
	   <ImageView android:duplicateParentState="true" 
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignRight="@id/search_listview_txt" 
			android:src="@drawable/arrow_right" android:layout_alignTop="@id/search_listview_txt"
			android:layout_alignParentRight="true" 
			android:layout_centerVertical="true"
			android:layout_marginRight="10dip"/>
	</RelativeLayout>
