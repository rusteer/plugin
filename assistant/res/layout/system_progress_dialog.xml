<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    >
    
      <FrameLayout 
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" 
          >
          
          <LinearLayout
            android:id="@+id/components_list_title_layout"
		    android:layout_width="fill_parent"
		    android:layout_height="50dip"  
		    android:orientation="horizontal"
		    android:background="@drawable/system_dialog_bg_top"
		    >
			<ImageView
				android:id="@+id/Components.List.Dialog.Icon"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			/>
			<TextView
				android:id="@+id/Components.List.Dialog.Title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			     android:textColor="@color/white"
			     android:textSize="21dip"
			/>
		</LinearLayout>
		
		 <ImageButton 
		     android:visibility="gone"
		        android:layout_width="32dip"
			    android:layout_height="32dip"
			    android:src="@drawable/software_chk_error_bg"
			    android:layout_gravity="right"
		     />
      </FrameLayout>
		
    
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"  
		    android:background="@drawable/system_dialog_bg_bottom"
		    >
			<ListView
				android:id="@+id/Components.List.Dialog.ListView"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:cacheColorHint="#00000000"
				android:background="@drawable/system_itemlist_default"
			    android:dividerHeight="2dp"
			   	android:clickable="true"
			   	android:divider="@drawable/listview_line_diver"
			/>
			
		</LinearLayout>	
			
</LinearLayout>
